digraph ThyseasProtocol {
    graph [
        rankdir=LR, 
        bgcolor="#0d1117", 
        fontcolor="#ffffff", 
        fontname="Helvetica, Arial, sans-serif",
        nodesep=0.5,
        ranksep=1.0,
        pad=0.5,
        label="THYSEAS: CREDIT EXPANSION DEMO (1 unit -> 10 units)",
        labelloc=t,
        fontsize=18
    ];
    
    node [
        fontname="Helvetica, Arial, sans-serif", 
        shape=rect, 
        style="filled,rounded", 
        fontsize=10, 
        fontcolor="#ffffff",
        color="#30363d",
        penwidth=1.5,
        margin="0.2,0.1"
    ];
    
    edge [
        fontname="Helvetica, Arial, sans-serif", 
        fontsize=8, 
        color="#58a6ff", 
        fontcolor="#8b949e",
        arrowsize=0.6
    ];

    // Actors
    Lender [label="Reserve Lender\n(Deposits 1 ETH)", fillcolor="#1f6feb", color="#58a6ff"];
    
    subgraph cluster_borrowers {
        label="Trusted Borrowers (Network)";
        fontcolor="#818b98";
        style="dotted";
        color="#30363d";
        B1 [label="Borrower 1\n(1 $THY)", fillcolor="#161b22", color="#58a6ff"];
        B2 [label="Borrower 2\n(1 $THY)", fillcolor="#161b22", color="#58a6ff"];
        B3 [label="Borrower 3\n(1 $THY)", fillcolor="#161b22", color="#58a6ff"];
        Dots [label="...", shape=plaintext];
        BN [label="Borrower 10\n(1 $THY)", fillcolor="#161b22", color="#58a6ff"];
    }

    // Smart Contracts
    Vault [label="Lending Vault\n(10x Engine)", fillcolor="#238636"];
    Token [label="$THY Token Supply\n(Total: 10 $THY)", fillcolor="#238636"];

    // Flow
    Lender -> Vault [label=" 1. Seed Reserve (1 Unit)"];
    
    Vault -> Token [label=" 2. Fractional Mint"];
    
    Token -> B1;
    Token -> B2;
    Token -> B3;
    Token -> BN [label=" 3. Distribute to 10 Addresses"];

    // Footer
    footer [label="1 Unit Liquidity supports 10 Units of Economy Credit", shape=plaintext, fontcolor="#7ee787"];
}
