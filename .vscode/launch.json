{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug THYSEAS Web",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}",
            "sourceMapPathOverrides": {
                "webpack:///./src/*": "${webRoot}/src/*"
            },
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ],
            "userDataDir": "${workspaceFolder}/.vscode/chrome-debug"
        },
        {
            "name": "Vite: Dev Script",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug Active Hardhat Script",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/smart_contracts",
            "runtimeExecutable": "node",
            "program": "${workspaceFolder}/smart_contracts/node_modules/hardhat/internal/cli/cli.js",
            "args": [
                "run",
                "${file}",
                "--network",
                "localhost"
            ],
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Full Stack Debug",
            "configurations": [
                "Vite: Dev Script",
                "Debug THYSEAS Web"
            ]
        }
    ]
}